<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorAbu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="8dp"
            android:background="@drawable/border_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:background="@drawable/border_page"
                android:id="@+id/txt_trans_id"
                android:text="99"
                android:textColor="@color/colorWhite"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txt_trans_kode"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:layout_marginRight="46dp"

                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@id/txt_trans_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Material"/>
            <TextView
                android:id="@+id/txt_trans_nama"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginRight="46dp"

                android:layout_below="@id/txt_trans_id"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Material/Satuan"/>

            <ImageView
                android:id="@+id/img_trans_material"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:background="@drawable/border_image"
                android:src="@drawable/ic_warehouse_24dp"
                android:layout_width="42dp"
                android:layout_height="42dp" />
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_below="@id/txt_trans_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_trans_jumlah"
                        android:textSize="14dp"
                        android:hint="Jumlah Qty"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edt_trans_harga"
                        android:textSize="14dp"
                        android:hint="Harga Satuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_trans_total"
                    android:textSize="14dp"
                    android:hint="Total Harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>