<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_margin="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorAbu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="8dp"
            android:background="@drawable/border_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:background="@drawable/border_page"
                android:id="@+id/txt_stok_id"
                android:text="99"
                android:textColor="@color/colorWhite"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txt_stok_kode"
                android:layout_marginTop="2dp"
                android:textSize="18sp"
                android:layout_marginRight="46dp"

                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@id/txt_stok_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Material"/>
            <TextView
                android:id="@+id/txt_stok_nama"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginRight="46dp"
                android:layout_below="@id/txt_stok_id"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Material/Satuan"/>

            <TextView
                android:id="@+id/txt_stok_jml"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginRight="46dp"
                android:layout_below="@id/txt_stok_nama"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stok Material"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>